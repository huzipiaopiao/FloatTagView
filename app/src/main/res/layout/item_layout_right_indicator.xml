<com.teaanddogdog.floattagviewlib.indicator.VRightIndicatorItemView xmlns:android="http://schemas.android.com/apk/res/android"
                                                             android:layout_width="wrap_content"
                                                             android:layout_height="wrap_content"
                                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                                             android:layout_margin="1dp"
                                                             android:id="@+id/indicator"
                                                             app:init_translate_x="70dp"
                                                             android:background="@drawable/bg_indicator">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_view_item"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        />

    <TextView
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/image_view_item"
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:maxLines="1"
        android:textSize="20sp"/>



</com.teaanddogdog.floattagviewlib.indicator.VRightIndicatorItemView>
